*
  margin 0
  padding 0

html, body, #root
  width 100%
  height 100%

.app
  height 100%
  width 100%

.app-header
  width 100%

  .app-header-title
    flex 1

  .app-header-menu-button
    margin-left -12px
    margin-right 20px

  .app-header-search
    position relative
    width 100%
    border-radius 5px
    background-color rgba(255, 255, 255, 0.15)

    &:hover
      background-color rgba(255, 255, 255, 0.25)


.app-body
  display flex
  height 100%
  width 100%

  @import 'app-sidebar.styl'

  .app-main
    box-sizing border-box
    padding 10px
    overflow-y auto
    height 100%
    width 100%
